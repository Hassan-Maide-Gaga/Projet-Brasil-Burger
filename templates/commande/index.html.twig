{% extends 'base.html.twig' %}

{% block title %}Commandes - Brasil Burger{% endblock %}

{% block customStylesheets %}
   
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Gestion des Commandes</h1>
        <p class="text-muted mt-2">Suivez et gérez toutes vos commandes en temps réel</p>
    </div>
    

    <div class="filter-card">
        {{ form_start(formSearch, {'attr': {'class': 'row g-3 align-items-end'}}) }}
            <div class="col-md-4">
                <label class="form-label fw-medium">Rechercher un client</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    {{ form_widget(formSearch.nomClient, {
                        'attr': {
                            'class': 'form-control form-control-modern border-start-0',
                            'placeholder': 'Nom du client...'
                        }
                    }) }}
                </div>
            </div>
            
            <div class="col-md-3">
                <label class="form-label fw-medium">État de la commande</label>
                {{ form_widget(formSearch.etatCmd, {
                    'attr': {'class': 'form-select form-select-modern'}
                }) }}
            </div>
            
            <div class="col-md-3">
                <label class="form-label fw-medium">Type de commande</label>
                {{ form_widget(formSearch.typeCmd, {
                    'attr': {'class': 'form-select form-select-modern'}
                }) }}
            </div>
            
            <div class="col-md-2">
                <button type="submit" class="btn filter-btn w-100">
                    <i class="fas fa-filter me-2"></i>Filtrer
                </button>
            </div>
        {{ form_end(formSearch) }}
    </div>
    

    <div class="table-modern">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th>Téléphone</th>
                        <th>Type</th>
                        <th>État</th>
                        <th>Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                    <tr>
                        <td>
                            <strong class="text">{{ commande.id }}</strong>
                        </td>
                        <td>
                            
                                <div class="ussm">
                                    <i class="fas "></i>
                                </div>
                                <span class="fw-medium">{{ commande.nomClient }}</span>
                            
                        </td>
                        <td>
                            <a href="tel:{{ commande.telephone }}" class="text-decoration-none">
                                <i class="fas "></i>
                                {{ commande.telephone }}
                            </a>
                        </td>
                        <td>
                            <span class="badge bg-primary text-white">
                                {{ commande.type|capitalize }}
                            </span>
                        </td>
                        <td>
                            {% if commande.etat == 'en_cours' %}
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-sync-alt me-1"></i>En cours
                                </span>
                            {% elseif commande.etat == 'terminee' %}
                                <span class="badge bg-success text-white">
                                    <i class="fas fa-check me-1"></i>Terminée
                                </span>
                            {% elseif commande.etat == 'annulee' %}
                                <span class="badge bg-danger text-white">
                                    <i class="fas fa-times me-1"></i>Annulée
                                </span>
                            {% else %}
                                <span class="badge bg-secondary text-white">
                                    <i class="fas fa-hourglass-half me-1"></i>En attente
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <small>
                                <i class="far  me-1 text-muted"></i>
                                {{ commande.date|date('d/m/Y') }}
                            </small>
                            <br>
                            <small class="text-muted">
                                {{ commande.date|date('H:i') }}
                            </small>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons justify-content-center">
                                <a href="{{ path('app_commande_details', {'id': commande.id}) }}" 
                                   class="action-btn bg-primary" title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_commande_terminer', {'id': commande.id}) }}" 
                                   class="action-btn bg-success" title="Terminer">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a href="{{ path('app_commande_annuler', {'id': commande.id}) }}" 
                                   class="action-btn bg-danger" title="Annuler">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucune commande trouvée</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos filtres de recherche</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    {% if nbrPage > 1 %}
    <div class="pagination-modern">
        {% if pageEnCours > 1 %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pageEnCours - 1})) }}" 
               class="pagination-btn btn-outline-primary">
                <i class="fas fa-chevron-left"></i> Précédent
            </a>
        {% endif %}
        
        <div class="page-info">
            Page <span class="fw-bold">{{ pageEnCours }}</span> sur {{ nbrPage }}
        </div>
        
        {% if pageEnCours < nbrPage %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pageEnCours + 1})) }}" 
               class="pagination-btn btn-primary text-white">
                Suivant <i class="fas fa-chevron-right"></i>
            </a>
        {% endif %}
    </div>
    {% endif %}
    
    <style>
        .user-avatar-sm {
            width: 28px;
            height: 28px;
            background: var(--gray-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.875rem;
            color: var(--dark);
        }
        
        .product-list {
            max-width: 200px;
        }
        
        .empty-state {
            padding: 3rem 0;
        }
        
        .btn-outline-primary {
            border: 2px solid var(--primary);
            color: var(--primary);
            background: transparent;
        }
        
        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
        }
    </style>
{% endblock %}
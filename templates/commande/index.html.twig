{% extends 'base.html.twig' %}

{% block title %}Commandes - Brasil Burger{% endblock %}

{% block customStylesheets %}
    .page-header {
        margin-bottom: 2rem;
    }
    
    .page-header h1 {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        color: var(--dark);
        position: relative;
        display: inline-block;
    }
    
    .page-header h1::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 80px;
        height: 4px;
        background: var(--second);
        border-radius: 2px;
    }
    
    .filter-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }
    
    .form-control-modern, .form-select-modern {
        border: 2px solid var(--gray);
        border-radius: 10px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control-modern:focus, .form-select-modern:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.25rem rgba(0, 159, 77, 0.15);
    }
    
    .filter-btn {
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        background: linear-gradient(135deg, var(--second) 0%, var(--third) 100%);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }
    
    .filter-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(255, 180, 0, 0.3);
    }
    
    .table-modern {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    }
    
    .table-modern thead {
        background: linear-gradient(135deg, var(--primary) 0%, #007A3D 100%);
        color: white;
    }
    
    .table-modern th {
        font-weight: 600;
        padding: 1.25rem 1.5rem;
        border: none;
    }
    
    .table-modern tbody tr {
        transition: all 0.2s ease;
    }
    
    .table-modern tbody tr:hover {
        background: var(--gray-light);
        transform: translateX(5px);
    }
    
    .table-modern td {
        padding: 1.25rem 1.5rem;
        vertical-align: middle;
        border-color: var(--gray);
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }
    
    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .action-btn:hover {
        transform: translateY(-2px);
        color: white;
    }
    
    .pagination-modern {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: 3rem;
    }
    
    .page-info {
        background: white;
        padding: 0.5rem 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        font-weight: 500;
    }
    
    .pagination-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .pagination-btn:hover {
        transform: translateY(-2px);
    }
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Gestion des Commandes</h1>
        <p class="text-muted mt-2">Suivez et gérez toutes vos commandes en temps réel</p>
    </div>
    

    <div class="filter-card">
        {{ form_start(formSearch, {'attr': {'class': 'row g-3 align-items-end'}}) }}
            <div class="col-md-4">
                <label class="form-label fw-medium">Rechercher un client</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    {{ form_widget(formSearch.nomClient, {
                        'attr': {
                            'class': 'form-control form-control-modern border-start-0',
                            'placeholder': 'Nom du client...'
                        }
                    }) }}
                </div>
            </div>
            
            <div class="col-md-3">
                <label class="form-label fw-medium">État de la commande</label>
                {{ form_widget(formSearch.etatCmd, {
                    'attr': {'class': 'form-select form-select-modern'}
                }) }}
            </div>
            
            <div class="col-md-3">
                <label class="form-label fw-medium">Type de commande</label>
                {{ form_widget(formSearch.typeCmd, {
                    'attr': {'class': 'form-select form-select-modern'}
                }) }}
            </div>
            
            <div class="col-md-2">
                <button type="submit" class="btn filter-btn w-100">
                    <i class="fas fa-filter me-2"></i>Filtrer
                </button>
            </div>
        {{ form_end(formSearch) }}
    </div>
    

    <div class="table-modern">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th>Téléphone</th>
                        <th>Type</th>
                        <th>État</th>
                        <th>Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                    <tr>
                        <td>
                            <strong class="text">{{ commande.id }}</strong>
                        </td>
                        <td>
                            
                                <div class="ussm">
                                    <i class="fas "></i>
                                </div>
                                <span class="fw-medium">{{ commande.nomClient }}</span>
                            
                        </td>
                        <td>
                            <a href="tel:{{ commande.telephone }}" class="text-decoration-none">
                                <i class="fas "></i>
                                {{ commande.telephone }}
                            </a>
                        </td>
                        <td>
                            <span class="badge bg-primary text-white">
                                {{ commande.type|capitalize }}
                            </span>
                        </td>
                        <td>
                            {% if commande.etat == 'en_cours' %}
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-sync-alt me-1"></i>En cours
                                </span>
                            {% elseif commande.etat == 'terminee' %}
                                <span class="badge bg-success text-white">
                                    <i class="fas fa-check me-1"></i>Terminée
                                </span>
                            {% elseif commande.etat == 'annulee' %}
                                <span class="badge bg-danger text-white">
                                    <i class="fas fa-times me-1"></i>Annulée
                                </span>
                            {% else %}
                                <span class="badge bg-secondary text-white">
                                    <i class="fas fa-hourglass-half me-1"></i>En attente
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            <small>
                                <i class="far  me-1 text-muted"></i>
                                {{ commande.date|date('d/m/Y') }}
                            </small>
                            <br>
                            <small class="text-muted">
                                {{ commande.date|date('H:i') }}
                            </small>
                        </td>
                        <td class="text-center">
                            <div class="action-buttons justify-content-center">
                                <a href="{{ path('app_commande_details', {'id': commande.id}) }}" 
                                   class="action-btn bg-primary" title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_commande_terminer', {'id': commande.id}) }}" 
                                   class="action-btn bg-success" title="Terminer">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a href="{{ path('app_commande_annuler', {'id': commande.id}) }}" 
                                   class="action-btn bg-danger" title="Annuler">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Aucune commande trouvée</h5>
                                <p class="text-muted mb-0">Essayez de modifier vos filtres de recherche</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    

    {% if nbrPage > 1 %}
    <div class="pagination-modern">
        {% if pageEnCours > 1 %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pageEnCours - 1})) }}" 
               class="pagination-btn btn-outline-primary">
                <i class="fas fa-chevron-left"></i> Précédent
            </a>
        {% endif %}
        
        <div class="page-info">
            Page <span class="fw-bold">{{ pageEnCours }}</span> sur {{ nbrPage }}
        </div>
        
        {% if pageEnCours < nbrPage %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({'page': pageEnCours + 1})) }}" 
               class="pagination-btn btn-primary text-white">
                Suivant <i class="fas fa-chevron-right"></i>
            </a>
        {% endif %}
    </div>
    {% endif %}
    
    <style>
        .user-avatar-sm {
            width: 28px;
            height: 28px;
            background: var(--gray-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.875rem;
            color: var(--dark);
        }
        
        .product-list {
            max-width: 200px;
        }
        
        .empty-state {
            padding: 3rem 0;
        }
        
        .btn-outline-primary {
            border: 2px solid var(--primary);
            color: var(--primary);
            background: transparent;
        }
        
        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
        }
    </style>
{% endblock %}
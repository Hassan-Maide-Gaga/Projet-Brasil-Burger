<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brasil Burger</title>
    <!-- Fonts modernes -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: var(--primary); box-shadow: 0 2px 15px rgba(0,0,0,0.1);">
            <div class="container">
 
                <a class="navbar-brand d-flex align-items-center fw-bold fs-4" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hamburger me-2"></i>Brasil Burger
                </a>

                <!-- Toggle Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Catalogue" asp-action="Index">
                                <i class="fas fa-store me-1"></i>Catalogue
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Commande" asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i>Mes Commandes
                            </a>
                        </li>
                    </ul>

                    <!-- Section Utilisateur -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="navbar-nav align-items-center">
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                                    <div class="user-avatar me-2 bg-light rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 36px; height: 36px; color: var(--primary); font-weight: 600;">
                                        @if (!string.IsNullOrEmpty(User.Identity.Name) && User.Identity.Name.Length > 0)
                                        {
                                            @User.Identity.Name[0].ToString().ToUpper()
                                        }
                                    </div>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mon Profil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-nav">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Connexion
                            </a>
                            <a class="btn btn-light ms-2" asp-controller="Account" asp-action="Register">
                                S'inscrire
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="mt-5 pt-4">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert pour des notifications modernes -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>